<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.akshay.parth.JobDescription">


        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="EntrySubmitted"
            android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/Addaddress"
            android:layout_marginLeft="148dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/Addaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your address"
            android:elevation="16dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/Adddesc"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/Adddesc"
            android:hint="Enter description of your Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="16dp"
            android:inputType="textPersonName"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/Addnumber"
            android:layout_marginLeft="7dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/Addtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="16dp"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:hint="Enter Title for the Service offered "
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/Addname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="16dp"
            android:inputType="textPersonName"
            android:hint="Enter your Name"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/Addtitle"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="16dp"
            android:layout_marginTop="35dp"
            android:id="@+id/Addnumber"
            app:layout_constraintTop_toBottomOf="@+id/Addname"
            app:layout_constraintLeft_toLeftOf="parent"
            android:inputType="number"
            android:layout_marginLeft="8dp"
            android:hint="Enter your Phone Number"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>