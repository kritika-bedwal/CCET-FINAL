<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORIES"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
android:paddingTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="28dp"
        android:background="@color/white"
        android:onClick="Source"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/farm"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />



    <Button
        android:id="@+id/textView2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="12dp"
        android:text="FARMING"

        android:textSize="15sp"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:background="@color/white"
        android:elevation="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bee"
        android:onClick="Source"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@color/white"
        android:elevation="16dp"
        android:onClick="Source"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/plumber"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/textView3"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="12dp"
        android:text="BEE KEEPING"
        android:textSize="15sp"

        android:layout_marginRight="15dp"
        android:layout_below="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <Button
        android:id="@+id/textView4"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="12dp"

        android:layout_marginLeft="18dp"
        android:text="PLUMBING"
        android:textSize="15sp"
        android:layout_below="@+id/imageButton3"
        android:layout_alignEnd="@+id/imageButton3" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton3"
        android:background="@color/white"
        android:onClick="Source"
        android:elevation="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/typing" />

    <Button
        android:id="@+id/textView5"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="12dp"
        android:layout_marginLeft="13dp"
        android:text="TYPING"
        android:textSize="15sp"
        android:layout_below="@+id/imageButton4"
        android:layout_alignEnd="@+id/imageButton4" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:onClick="Source"
        android:elevation="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/electronic" />

    <Button
        android:id="@+id/textView6"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="12dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/imageButton6"
        android:layout_marginBottom="5dp"
        android:text="CODING"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButton5"
        android:background="@color/white"
        android:onClick="Source"
        android:elevation="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/coding" />

    <Button
        android:id="@+id/textView7"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="12dp"
        android:text="ELECTRONICS"
        android:textSize="15sp"
        android:layout_below="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5" />

</RelativeLayout>

</ScrollView>


</RelativeLayout>
