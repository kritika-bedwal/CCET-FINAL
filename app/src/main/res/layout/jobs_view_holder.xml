<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:elevation="20dp"
android:layout_margin="8dp"    android:background="@color/white"

    android:layout_height="wrap_content">


    <ImageButton
        android:id="@+id/messageImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/message"
        android:background="@color/white"
        android:elevation="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintLeft_toRightOf="@+id/callingimageButton"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:id="@+id/titleTextView"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:lines="1"
        android:text="TextView"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />



    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="200dp"

        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:lines="1"
        android:text="textview"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <ImageButton
        android:id="@+id/callingimageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/call"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintLeft_toRightOf="@+id/titleTextView"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="25dp"
        android:scaleType="centerCrop"
        android:background="@color/white"

        />

    <View
        android:layout_width="420dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/addressTextView"
        app:layout_constraintRight_toRightOf="parent"

        android:background="#c0c0c0"
        android:layout_marginTop="18dp"
        android:layout_marginRight="-8dp" />


    <View
        android:layout_width="1dp"
        android:layout_height="68dp"

        android:background="#c0c0c0"
        tools:layout_editor_absoluteY="10dp"
        tools:layout_editor_absoluteX="216dp" />
</android.support.constraint.ConstraintLayout>